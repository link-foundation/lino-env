{
  "name": "lino-env",
  "version": "0.3.0",
  "description": "A JavaScript library to operate .lenv files",
  "type": "module",
  "main": "src/lino-env.mjs",
  "exports": {
    ".": "./src/lino-env.mjs"
  },
  "scripts": {
    "test": "node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:file-size": "node scripts/check-file-size.mjs",
    "check": "npm run lint && npm run format:check && npm run check:file-size",
    "prepare": "husky || true",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/link-foundation/lino-env.git",
    "directory": "js"
  },
  "bugs": {
    "url": "https://github.com/link-foundation/lino-env/issues"
  },
  "keywords": [
    "lino",
    "env",
    "environment",
    "links-notation",
    "config"
  ],
  "author": "link-foundation",
  "license": "Unlicense",
  "dependencies": {
    "links-notation": "^0.11.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "test-anywhere": "^0.8.48"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
