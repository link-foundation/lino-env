{
  "name": "lino-env-monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "Monorepo for lino-env - A library to operate .lenv files (JavaScript and Rust)",
  "type": "module",
  "workspaces": [
    "js"
  ],
  "scripts": {
    "test:js": "cd js && npm test",
    "lint:js": "cd js && npm run lint",
    "format:js": "cd js && npm run format",
    "test:rust": "cd rust && cargo test",
    "lint:rust": "cd rust && cargo clippy",
    "format:rust": "cd rust && cargo fmt",
    "test": "npm run test:js && npm run test:rust",
    "lint": "npm run lint:js && npm run lint:rust",
    "prepare": "husky || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/link-foundation/lino-env.git"
  },
  "bugs": {
    "url": "https://github.com/link-foundation/lino-env/issues"
  },
  "keywords": [
    "lino",
    "env",
    "environment",
    "links-notation",
    "config",
    "monorepo"
  ],
  "author": "link-foundation",
  "license": "Unlicense",
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "lint-staged": {
    "js/**/*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
